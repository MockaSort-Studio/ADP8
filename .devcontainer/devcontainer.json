// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/cpp
{
    "name": "adp8-devcontainer",
    "initializeCommand": "${localWorkspaceFolder}/.devcontainer/initialize_command.sh",
    "build": {
        "dockerfile": "./Dockerfile",
        "options": [
            "--network=host"
        ]
    },
    "mounts": [
        "source=${localEnv:HOME}/.cache/bazel,target=/home/vscode/.cache/bazel,type=bind",
        "source=${localEnv:HOME}/adp8_data,target=/home/vscode/adp8_data,type=bind",
        "source=/usr/local/share/ca-certificates,target=/usr/local/share/ca-certificates,type=bind",
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
    ],
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
    },
    "runArgs": [
        "--network=host",
        "--ipc=host",
    ],
    "remoteUser": "vscode",
    "postCreateCommand": "sudo update-ca-certificates",
    "features": {
        "ghcr.io/balazs23/devcontainers-features/bazel:1": {},
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1.6.5": {},
        "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
        "ghcr.io/devcontainers/features/git-lfs:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "llvm-vs-code-extensions.vscode-clangd",
                "BazelBuild.vscode-bazel",
                "akiramiyakoda.cppincludeguard",
                "ms-python.black-formatter",
                "eamodio.gitlens",
                "hediet.vscode-drawio",
                "ms-azuretools.vscode-containers"
            ],
            "settings": {
                // Editor
                "editor.detectIndentation": false,
                "editor.formatOnSave": true,
                // Language-specific editor overrides
                "[cpp]": {
                    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
                },
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter"
                },
                "[dockerfile]": {
                    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
                },
                // C/C++ (MS C_Cpp)
                "C_Cpp.intelliSenseEngine": "disabled",
                "C_Cpp.codeAnalysis.clangTidy.enabled": true,
                "C_Cpp.codeAnalysis.runAutomatically": false,
                "C_Cpp.clang_format_path": "clang-format",
                "C_Cpp.formatting": "clangFormat",
                "C/C++ Include Guard.Comment Style": "Line",
                "C/C++ Include Guard.Macro Type": "Filepath",
                // C/C++ (clangd)
                "clangd.path": "clangd",
                "clangd.checkUpdates": true,
                "clangd.arguments": [
                    "--query-driver=**",
                    "--compile-commands-dir=${workspaceFolder}"
                ],
                // Bazel
                "bazel.buildifierExecutable": "buildifier",
                "bazel.lsp.command": "starpls",
                "bazel.buildifierFixOnFormat": true
            }
        }
    }
}